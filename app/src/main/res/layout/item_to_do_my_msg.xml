<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp1"
    android:background="@color/white"
    android:id="@+id/ll_msg"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <!--<ImageView
        android:id="@+id/oa_img"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="@dimen/sp12"
        android:layout_weight="1" />-->
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/oa_img"
            android:visibility="visible"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"

           />
        <RelativeLayout
            android:id="@+id/rl_jiaobiao"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/shape_juxing_bg_red"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp5"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            ></RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_weight="6">

        <TextView
            android:id="@+id/tv_present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="@dimen/sp5"
            android:text="1111"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/sp5"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@color/hintColor"
                android:layout_centerVertical="true"
                android:text=""/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/sp5"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@color/hintColor"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="1111"/>

        </LinearLayout>




    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_msg_num"
            android:layout_toLeftOf="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp10"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp8"
            android:textColor="@color/white"
            android:background="@drawable/shape_round_yellow"
            android:padding="@dimen/sp6"
            android:text="100"/>

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp12"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/iv_go"/>
    </RelativeLayout>


</LinearLayout>
